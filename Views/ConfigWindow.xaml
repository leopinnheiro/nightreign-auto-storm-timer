<Window x:Class="nightreign_auto_storm_timer.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nightreign_auto_storm_timer.Views"
        xmlns:vm="clr-namespace:nightreign_auto_storm_timer.ViewModels"
        xmlns:m="clr-namespace:nightreign_auto_storm_timer.Models"
        d:DataContext="{d:DesignInstance Type=vm:ConfigViewModel}"
        mc:Ignorable="d"
        Height="340"
        SizeToContent="Width"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Focusable="True"
>
    <Border CornerRadius="4" Background="#18181b">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Padding="0 6"
                Background="#27272a"
                CornerRadius="4"
            >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Text="Select the monitor where the game is running"
                        Foreground="#fafafa"
                        FontSize="14"
                        Margin="0 0 0 8"
                        HorizontalAlignment="Center"/>
                    
                    <ListBox
                        Grid.Row="1"
                        Width="624"
                        SelectionMode="Single"
                        HorizontalContentAlignment="Center"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Name="MonitorListBox"
                        BorderThickness="0"
                        Background="#27272a"
                        ItemsSource="{Binding Monitors}"
                        SelectedItem="{Binding SelectedMonitor, Mode=TwoWay}"
    >
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="300" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type m:Monitor}">
                                <Border CornerRadius="4" Background="#18181b" Margin="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border 
                                            Grid.Row="0"
                                            Width="300"
                                            Height="169"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                        >
                                            <Image Source="{Binding Thumbnail}" Stretch="Fill"/>
                                        </Border>
                                        <TextBlock
                                            Grid.Row="1"
                                            Text="{Binding Name}"
                                            Foreground="#f4f4f5"
                                            TextAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="5"
                                        />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="4 4 0 0" />
                                <Setter Property="Cursor" Value="Arrow" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border
                                                x:Name="Bd"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Background="{TemplateBinding Background}"
                                            >
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#0284c7" />
                                                    <Setter Property="Cursor" Value="Hand" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#38bdf8" />
                                                    <Setter Property="Cursor" Value="Hand" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" >
                    <TextBlock Text="FPS for OCR capture" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#fafafa"/>
                    <ComboBox Width="80"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding FpsList}"
                          SelectedItem="{Binding SelectedFps}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="#09090b"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <Button x:Name="SaveConfig" Grid.Column="1" Content="Save" Width="60" HorizontalAlignment="Right" Click="SaveConfig_Click"/>
            </Grid>

        </Grid>
    </Border>
</Window>
