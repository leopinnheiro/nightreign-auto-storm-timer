<Window x:Class="nightreign_auto_storm_timer.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nightreign_auto_storm_timer.Views"
        xmlns:vm="clr-namespace:nightreign_auto_storm_timer.ViewModels"
        xmlns:m="clr-namespace:nightreign_auto_storm_timer.Models"
        xmlns:utils="clr-namespace:nightreign_auto_storm_timer.Utils"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:nightreign_auto_storm_timer.Behaviors"
        d:DataContext="{d:DesignInstance Type=vm:ConfigViewModel}"
        mc:Ignorable="d"
        MinHeight="340"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Focusable="True"
>
    <Border CornerRadius="4" Background="#18181b">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Padding="0 6"
                Background="#27272a"
                CornerRadius="4"
            >
                <Grid MaxHeight="340">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Text="Select the monitor where the game is running"
                        Foreground="#fafafa"
                        FontSize="16"
                        Margin="0 0 0 8"
                        HorizontalAlignment="Center"/>

                    <ListBox
                        Grid.Row="1"
                        Width="930"
                        SelectionMode="Single"
                        HorizontalContentAlignment="Center"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Name="MonitorListBox"
                        BorderThickness="0"
                        Background="#27272a"
                        ItemsSource="{Binding Monitors}"
                        SelectedItem="{Binding SelectedMonitor, Mode=TwoWay}"
    >
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="300" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type m:Monitor}">
                                <Border CornerRadius="4" Background="#18181b" Margin="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border 
                                            Grid.Row="0"
                                            Width="300"
                                            Height="169"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                        >
                                            <Image Source="{Binding Thumbnail}" Stretch="Fill"/>
                                        </Border>
                                        <TextBlock
                                            Grid.Row="1"
                                            Text="{Binding Name}"
                                            Foreground="#f4f4f5"
                                            TextAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="5"
                                        />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="4 4 0 0" />
                                <Setter Property="Cursor" Value="Arrow" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border
                                                x:Name="Bd"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Background="{TemplateBinding Background}"
                                            >
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#0284c7" />
                                                    <Setter Property="Cursor" Value="Hand" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#38bdf8" />
                                                    <Setter Property="Cursor" Value="Hand" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    BorderBrush="#27272a"
                    BorderThickness="1"
                    CornerRadius="4"
                    Grid.Column="0"
                    Margin="0, 0, 5, 0"
                >
                    <Grid Margin="5" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                             Content="Timers in seconds"/>

                        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day I Storm 1"/>
                        <TextBox Grid.Row="1" Grid.Column="1" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayOneStormOne}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day I Storm 1 Shrinking"/>
                        <TextBox Grid.Row="2" Grid.Column="1" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayOneStormOneShrinking}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day I Storm 2"/>
                        <TextBox Grid.Row="3" Grid.Column="1" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayOneStormTwo}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day I Storm 2 Shrinking"/>
                        <TextBox Grid.Row="4" Grid.Column="1" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayOneStormTwoShrinking}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day II Storm 1"/>
                        <TextBox Grid.Row="1" Grid.Column="4" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayTwoStormOne}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day II Storm 1 Shrinking"/>
                        <TextBox Grid.Row="2" Grid.Column="4" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayTwoStormOneShrinking}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day II Storm 2"/>
                        <TextBox Grid.Row="3" Grid.Column="4" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayTwoStormTwo}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="Day II Storm 2 Shrinking"/>
                        <TextBox Grid.Row="4" Grid.Column="4" MaxLength="4" TextAlignment="Right"
                             Text="{Binding DayTwoStormTwoShrinking}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>
                    </Grid>
                </Border>
                <Border
                    BorderBrush="#27272a"
                    BorderThickness="1"
                    CornerRadius="4"
                    Grid.Column="1"
                    Margin="0, 0, 5, 0"
                >
                    <Grid Margin="5" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                                Content="Capture"/>

                        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#fafafa"
                           Content="FPS for OCR"/>
                        <ComboBox Grid.Row="1"
                                  Grid.Column="1"
                                  Width="80"
                                  ItemsSource="{Binding FpsList}"
                                  SelectedItem="{Binding SelectedFps}"/>

                        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                  Content="Monitor is HDR"
                                  IsChecked="{Binding MonitorIsHdr}"/>
                        <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                          Content="Show guide"
                          IsChecked="{Binding IsShowGuide}"/>
                        <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                          Content="DEBUG"
                          IsChecked="{Binding IsDebug}"/>

                        <Label Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                                Content="X"/>
                        <TextBox Grid.Row="1" Grid.Column="4" MaxLength="5" TextAlignment="Right"
                                Text="{Binding CapturePositionX}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>
                        <Label Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                                Content="Y"/>
                        <TextBox Grid.Row="2" Grid.Column="4" MaxLength="5" TextAlignment="Right"
                                Text="{Binding CapturePositionY}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>
                        <Label Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                                Content="Width"/>
                        <TextBox Grid.Row="3" Grid.Column="4" MaxLength="5" TextAlignment="Right"
                                Text="{Binding CapturePositionWidth}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <Label Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Foreground="#fafafa"
                                Content="Height"/>
                        <TextBox Grid.Row="4" Grid.Column="4" MaxLength="5" TextAlignment="Right"
                                Text="{Binding CapturePositionHeight}">
                            <i:Interaction.Behaviors>
                                <behaviors:NumericTextBoxBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>
                    </Grid>
                </Border>

                <Grid Margin="5" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="3"
                            Grid.Column="0"
                            Content="Cancel"
                            Height="30"
                            Click="Cancel_Click" Margin="0,28,4,0"/>
                    <Button Grid.Row="3"
                            Grid.Column="1"
                            Content="Save"
                            Height="30"
                            Click="SaveConfig_Click" Margin="4,28,0,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
